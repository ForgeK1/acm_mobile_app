<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Navy"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <!-- Add TextView to display the date -->

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Contact"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/igButton"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:text="Instagram"
            android:drawableTop="@drawable/instagram"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/discordButton"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:text="Discord"
            android:drawableTop="@drawable/discord"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/webButton"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:text="Website"
            android:drawableTop="@drawable/web"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/fbButton"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:text="Facebook"
            android:drawableTop="@drawable/facebook"
            android:textSize="20sp"/>


    </GridLayout>

</RelativeLayout>